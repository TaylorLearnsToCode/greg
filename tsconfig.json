/*
  This is a "Solution Style" tsconfig.json file, and is used by editors and TypeScriptâ€™s language server to improve development experience.
  It is not intended to be used to perform a compilation.

  To learn more about this file see: https://angular.io/config/solution-tsconfig.
*/
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@encounter/*": ["src/app/encounter/*"],
      "@monster/*": ["src/app/monster/*"],
      "@shared/*": ["src/app/shared/*"],
      "@test/*": ["src/assets/test-data/*"]
    },
    "sourceMap": true,
    "target": "es2015"
  }
}
